
			<div  id="identitiedeclarant">
                    <form class="border border-light p-3" action="#!">
						<p class="h4 mb-1 text-center">Conséquences sur les personnes concernées</p>
					    <div class="form-row mb-1">
                            <div class="col">
                                <!-- First name -->
                                <input type="text" id="agePersonneConserne" class="form-control" placeholder="Age de la personne" value="{{ esr.agePersonneConserne }}">
                            </div>
                            
                        </div>

                        <div class="form-row  custom-control custom-checkbox  mb-1">
                            <div class="col d-inline mr-4">
                                <!-- Homme-->
                                <input type="checkbox" class="custom-control-input " id="homme" {% if esr.sex =="HOMME" %} checked="checked" {% endif %}>
        					    <label class="custom-control-label" for="homme">Homme</label> 
                            </div>
                            <div class="col d-inline">
                                <!-- Femme -->
                                <input type="checkbox" class="custom-control-input" id="femme" {% if esr.sex =="FEMME" %} checked="checked" {% endif %}>
        						<label class="custom-control-label" for="femme">Femme</label>
                            </div>
                            
                           
                        </div>
                        
                        

                     	<p  class="text-center  mb-1 mt-1" style="border-bottom:1px solid #ced4da;">                     	
                        <strong>4.</strong>
                        Conséquences réelles immédiates
                        </p>  
                     	<div class="form-group">
                          <textarea placeholder="Décrire les conséquences" class="form-control rounded-0" id="consequencereelleim" rows="7">{{ esr.consequencereelleim }}</textarea>
                        </div>
                        
 
 
                      	<p  class="text-center  mb-1 mt-1" style="border-bottom:1px solid #ced4da;">                     	
                        <strong>4.</strong>
                        Conséquences potentielles (réalistes)
                        </p>  
                     	<div class="form-group">
                          <textarea placeholder="Décrire les conséquences" class="form-control rounded-0" id="consequencepotentielle" rows="7">{{ esr.consequencepotentielle }}</textarea>
                        </div>                       
                        
                        {% include ("@EasyDose/portlet/Esr/precedent_next_esr.html.twig") %} 
                    </form>    
</div>


<script>

changeesrValueGlobal('{{urlsaveesrvalue}}',{{id_esr_courant}},'input','agePersonneConserne');
changeesrValueGlobal('{{urlsaveesrvalue}}',{{id_esr_courant}},'input','consequencereelleim');
changeesrValueGlobal('{{urlsaveesrvalue}}',{{id_esr_courant}},'input','consequencepotentielle');

$('#homme').change(function() {
    // this will contain a reference to the checkbox   
    if (this.checked) {
        
    	$('#femme').prop( "checked", false );
    	changeValueAsynck('{{urlsaveesrvalue}}',{{id_esr_courant}},'sex','HOMME');
    } else {
        // the checkbox is now no longer checked
    	if($('#femme').prop( "checked")==false)
        	changeValueAsynck('{{urlsaveesrvalue}}',{{id_esr_courant}},'sex',' '); 
    }
});


$('#femme').change(function() {
    // this will contain a reference to the checkbox   
    if (this.checked) {
    	$('#homme').prop( "checked", false );
    	changeValueAsynck('{{urlsaveesrvalue}}',{{id_esr_courant}},'sex','FEMME');
    } else {
        // the checkbox is now no longer checked
        if($('#homme').prop( "checked")==false)
        	changeValueAsynck('{{urlsaveesrvalue}}',{{id_esr_courant}},'sex',' '); 
    }
});
</script>