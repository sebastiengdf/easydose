{% extends "@EasyDose/Patient/template_mail.html.twig" %}

{% block content %}
  <br>
  
  <div style="padding-top: 1.25em;
    font-family: 'Helvetica neue',Helvetica,Arial,Verdana,sans-serif;
    font-size: 1.25em;
    line-height: 1.375em;
    color: #42526e;
    text-align: center;">
    
    
    <div style="margin-bottom: 2em;">
    
    <div style="margin: auto; width:30em;text-align: left;">
        Bonjour {{ user.firstname }},<br><br>
        {% if patient.sex == "Homme" %}
        Mr.
        {% else %}
        Mme. 
        {% endif %}
        <span style="font-weight:bold;">{{ patient.nom }} {{ patient.prenom }}-{{ patient.idregional }}</span> a bénéficié ce jour
        <span style="font-weight:bold;">{{ "now" |  date('d/m/Y')}}</span> d'un examen ayant conduit à un dépassement de seuil du Niveau de Référence Diagnostique national à <span style="font-weight:bold;">{{ etablissement.nom }}</span>.
   </div>     
        
   </div>
   <a href="{{ url('login') }}" style="text-decoration:none;" >
       <div style=" margin: auto;width:7em;
    border: 0.0625em solid {{ bottomcolor }};
    font-family: 'Helvetica neue',Helvetica,Arial,Verdana,sans-serif;
    font-size: 1em;
    color: #ffffff;
    text-decoration: none;
    border-radius: 0.1875em;
    padding: 0.9375em 2.5em;background-color: {{ bottomcolor }};margin-bottom: 0em"> Voir L'examen</div>
    </a>
   
    <div style=" padding: 1em 0;
    border-bottom: 0.0625em solid;
    margin: auto; width:25%; margin-bottom: 2em;">
    &nbsp;
    </div>
   
    <span style="font-weight:bold;">Contactez votre radiophysicien pour procéder à l'estimation de la dose reçue.</span>

  </div>  
   



{% endblock %}
